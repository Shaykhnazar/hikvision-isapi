# Hikvision ISAPI Configuration

# Default device to use (must match a key in config/hikvision.php devices array)
HIKVISION_DEFAULT_DEVICE=primary

# Device Connection Settings
HIKVISION_IP=192.168.1.100
HIKVISION_PORT=80
HIKVISION_PROTOCOL=http

# Authentication
HIKVISION_USERNAME=admin
HIKVISION_PASSWORD=your_password_here

# Connection Settings
HIKVISION_TIMEOUT=30
HIKVISION_VERIFY_SSL=false

# Response Format (json or xml)
HIKVISION_FORMAT=json

# Logging
HIKVISION_LOGGING=true
HIKVISION_LOG_CHANNEL=stack
